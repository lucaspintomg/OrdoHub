# ==============================================
# OrdoHub - Configurações de Ambiente
# ==============================================

# Servidor de Desenvolvimento
VITE_PORT=3000
VITE_HMR_PORT=24678
VITE_PREVIEW_PORT=4173

# API Backend
VITE_API_URL=http://localhost:8000
VITE_API_TIMEOUT=10000
VITE_WEBSOCKET_URL=ws://localhost:8000

# Autenticação & Segurança
VITE_AUTH_DOMAIN=ordohub.auth0.com
VITE_AUTH_CLIENT_ID=your_auth0_client_id
VITE_AUTH_AUDIENCE=https://api.ordohub.com
VITE_JWT_SECRET=your_jwt_secret_key

# Configurações da Aplicação
VITE_APP_NAME="OrdoHub"
VITE_APP_DESCRIPTION="Hub Universal de Gestão Doméstica"
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Features Flags
VITE_FEATURE_PWA=true
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_OFFLINE_MODE=true
VITE_FEATURE_REAL_TIME=true

# Integração com Serviços
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=ordohub.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=ordohub-project

# Storage & CDN
VITE_STORAGE_BUCKET=ordohub-storage
VITE_CDN_URL=https://cdn.ordohub.com
VITE_UPLOAD_MAX_SIZE=5242880

# Performance & Monitoring
VITE_PERFORMANCE_MONITORING=true
VITE_ERROR_TRACKING=true
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# Configurações específicas do OrdoHub
ORDOHUB_FAMILY_MAX_MEMBERS=10
ORDOHUB_HOUSEHOLD_MAX_ROOMS=20
ORDOHUB_TASK_MAX_ASSIGNEES=5
ORDOHUB_FILE_UPLOAD_TYPES=image/*,application/pdf,text/*
ORDOHUB_SESSION_TIMEOUT=3600000
ORDOHUB_AUTO_SAVE_INTERVAL=30000

# Database & Cache
VITE_REDIS_URL=redis://localhost:6379
VITE_DATABASE_URL=postgresql://user:password@localhost:5432/ordohub
VITE_CACHE_TTL=300000

# Email & Notifications
VITE_EMAIL_SERVICE_API_KEY=your_email_service_key
VITE_PUSH_VAPID_PUBLIC_KEY=your_vapid_public_key
VITE_SMS_SERVICE_SID=your_twilio_service_sid

# Social Login Providers
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_FACEBOOK_APP_ID=your_facebook_app_id
VITE_APPLE_CLIENT_ID=your_apple_client_id

# Desenvolvimento & Debug
VITE_MOCK_API=false
VITE_BYPASS_AUTH=false
VITE_SHOW_DEV_TOOLS=true
VITE_ENABLE_SOURCE_MAPS=true
